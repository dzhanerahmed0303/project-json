<!DOCTYPE html>
<html lang="nl">

<%- include('../partials/header', { title: 'Registreren' }) %>

    <head>
        <link rel="stylesheet" href="/css/reset.css">
        <link rel="stylesheet" href="/css/loginstyle.css"> <!-- Zelfde stijl als login -->
    </head>

    <body>
        <%- include('../partials/navbar') %>

            <div class="login-container">
                <form method="POST" action="/cards/register" class="login-form">
                    <h1>Account aanmaken</h1>

                    <% if (error) { %>
                        <p class="error">
                            <%= error %>
                        </p>
                        <% } %>

                            <label for="username">Gebruikersnaam</label>
                            <input type="text" id="username" name="username" required>

                            <label for="password">Wachtwoord</label>
                            <input type="password" id="password" name="password" required>

                            <button type="submit" class="btn">Registreren</button>

                            <p class="hint">Heb je al een account? <a href="/cards/login">Log in</a>.</p>
                </form>
            </div>

            <%- include('../partials/footer') %>
    </body>

</html>