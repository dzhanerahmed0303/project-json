<!DOCTYPE html>
<html>

<head>
    <title>Guilds</title>
    <!-- <link rel="stylesheet" href="css/styles.css"> -->
</head>

<body>
    <nav class="navbar">
        <a href="/">Home</a>
        <a href="/cards">Cards</a>
        <a href="/guilds" class="active">Guilds</a>
        <div class="search-box">
            <input type="text" placeholder="Search for guilds..." value="<%= search %>">
        </div>
    </nav>

    <div class="container">
        <h1>Guilds</h1>

        <table class="guilds-table">
            <thead>
                <tr>
                    <th>
                        <a
                            href="/guilds?sort=name&order=<%= sortField === 'name' && sortOrder === 'asc' ? 'desc' : 'asc' %>&search=<%= search %>">
                            NAME <%= sortField==='name' ? (sortOrder==='asc' ? '▲' : '▼' ) : '' %>
                        </a>
                    </th>
                    <th>GUILD MASTER</th>
                    <th>FOUNDED YEAR</th>
                    <th>MOTTO</th>
                    <th>ELEMENT</th>
                </tr>
            </thead>
            <tbody>
                <% guilds.forEach(guild=> { %>
                    <tr>
                        <td>
                            <%= guild.name %>
                        </td>
                        <td>
                            <%= guild.master %>
                        </td>
                        <td>
                            <%= guild.foundedYear %>
                        </td>
                        <td>"<%= guild.motto %>"</td>
                        <td>
                            <%= guild.element %>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
</body>

</html>